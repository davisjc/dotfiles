"audio-volume-dec"
Mod4 + minus

"audio-volume-dec"
Mod4 + Mod1 + j

"audio-volume-mute"
Mod4 + KP_Multiply

"audio-volume-mute"
Mod4 + Mod1 + m

"shrublight-on"
Mod4 + F5

"shrublight-off"
