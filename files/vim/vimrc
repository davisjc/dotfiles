require("nvim-treesitter").install(treesitter_filetypes)
vim.api.nvim_create_autocmd('FileType', {
    pattern = treesitter_filetypes,
    callback = function()
        -- enable treesitter highlighting
        vim.treesitter.start()

        -- enable treesitter indentation
        vim.bo.indentexpr = "v:lua.require('nvim-treesitter').indentexpr()"
    end,
})
EOF
endif

" disable comment continuation in some filetypes
if has('nvim')
lua << EOF
vim.api.nvim_create_autocmd("FileType", {
    pattern = {
        "vim", -- embedded lua quotes are confused as comments
    },
    callback = function()
        vim.opt_local.formatoptions:remove {
            "r", -- continue comments when pressing return
            "o", -- continue comments when pressing o or O
        }
    end,
})
EOF
endif

