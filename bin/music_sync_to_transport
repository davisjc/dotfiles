#!/bin/sh
#
# Transfer music delta information to transport device.

_mid_repo_dir=/mnt/carputer_transport
_src_repo=pc
_dst_repo=car

cd $_mid_repo_dir || kill -INT $$

_src_repo_dir=$(git ls-remote --get-url $_src_repo)
_dst_repo_dir=$(git ls-remote --get-url $_dst_repo)

echo "Syncing music archive to transport..."
git annex sync $_src_repo
git annex get --in=$_src_repo --and --not --in=$_dst_repo
git annex dropunused all --force
git gc
echo "Done syncing music archive to transport..."

